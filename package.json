{
  "name": "beat-collector",
  "version": "0.1.0",
  "description": "Self-hosted music library manager with Spotify integration",
  "scripts": {
    "css:build": "tailwindcss -i ./styles/input.css -o ./static/css/output.css",
    "css:watch": "tailwindcss -i ./styles/input.css -o ./static/css/output.css --watch",
    "css:prod": "NODE_ENV=production tailwindcss -i ./styles/input.css -o ./static/css/output.css --minify"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {}
}
